<!doctype html>
<html lang=en>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="">
        <meta content="IE=edge" http-equiv=X-UA-Compatible>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="images/logo.png"/>
        <title>Rock, Paper, Scissors: The Game</title>
    </head>
    <body>
        <div id="shield" class="shield">
            <h1>Rock, Paper, Scissors</h1>
            <button id="startGame" class="start-game">Start Game</button>
        </div>
        <div id="game" class="game hidden">
            <button id="reset" class="icon reset" aria-label="reset game"></button>
            <button id="switchPlayers" class="icon toggle-human-player cpu" aria-label="Switch to PC vs PC game"></button>
            <button id="toggleMusic" class="icon music" aria-label="mute audio"></button>
            <div class="view">
                <div class="player-block">
                    <div id="score2" class="score" aria-label="current score">0</div>
                    <div id="player2" class="player player2">?</div>
                </div>
                <div class="player-block">
                    <div id="score1" class="score" aria-label="current score">0</div>
                    <div id="player1" class="player player1">?</div>
                </div>
            </div>
            <div id="controls" class="controls"></div>
        </div>
    </body>
</html>
